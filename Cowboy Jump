import pygame
import sys

pygame.init()

#general!
CLOCK = pygame.time.Clock()
SCREEN = pygame.display.set_mode((800, 600))
pygame.display.set_caption("Jumping in PyGame")

#position of cowboy
X_POSITION, Y_POSITION = 400, 500

#by default no jump
jumping = False

#jump specifics
Y_GRAVITY = 0.5
JUMP_HEIGHT = 10
Y_Jumpspeed= JUMP_HEIGHT

#positions of cowboy
STANDING_SURFACE = pygame.transform.scale(pygame.image.load("stand 1.png"), (48, 64))
JUMPING_SURFACE = pygame.transform.scale(pygame.image.load("jump 1.png"), (48, 64))

#background by catarina
BACKGROUND = pygame.image.load("background.png")

cowboy_rect = STANDING_SURFACE.get_rect(center=(X_POSITION, Y_POSITION))

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()

#space to jump
    keys_pressed = pygame.key.get_pressed()

    if keys_pressed[pygame.K_SPACE]:
        jumping = True

    SCREEN.blit(BACKGROUND, (0, 0))

# jump
    if jumping:
        Y_POSITION -= Y_Jumpspeed
        Y_Jumpspeed -= Y_GRAVITY
        if Y_Jumpspeed < -JUMP_HEIGHT:
            jumping = False
            Y_Jumpspeed = JUMP_HEIGHT
        cowboy_rect = JUMPING_SURFACE.get_rect(center=(X_POSITION, Y_POSITION))
        SCREEN.blit(JUMPING_SURFACE, cowboy_rect)
    else:
        cowboy_rect = STANDING_SURFACE.get_rect(center=(X_POSITION, Y_POSITION))
        SCREEN.blit(STANDING_SURFACE, cowboy_rect)

    pygame.display.update()
    CLOCK.tick(60)